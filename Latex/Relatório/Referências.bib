issn = {08888892},
journal = {Conservation Biology},
keywords = {Apoidea,Arthropod,Bee,Ecological monitoring,Floral visitor,Pollinator monitoring,Volunteer observer},
number = {3},
pages = {607--617},
pmid = {21507061},
title = {{Evaluaci{\'{o}}n de la Calidad de Datos de Comunidades de Polinizadores Tomados por Ciudadanos-Cient{\'{i}}ficos}},
