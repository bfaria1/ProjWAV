issn = {00063207},
journal = {Biological Conservation},
keywords = {Avian ecology,Biodiversity monitoring,Birding,Breeding bird survey,Conservation biology,List length analysis,Ornithology,Population trend,USGS,eBird},
number = {October 2017},
pages = {151--159},
title = {{Using opportunistic citizen science data to estimate avian population trends}},
volume = {221},
