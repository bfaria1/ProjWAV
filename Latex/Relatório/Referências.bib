issn = {10902643},
journal = {Icarus},
keywords = {Cratering,Impact processes,Moon,Moon, surface},
pages = {109--131},
publisher = {Elsevier Inc.},
title = {{The variability of crater identification among expert and community crater analysts}},
url = {http://dx.doi.org/10.1016/j.icarus.2014.02.022},
volume = {234},
year = {2014}
}
