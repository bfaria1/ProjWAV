keywords = {Avian,Citizen Science,Shannon diversity,Shorebirds,Species richness},
number = {4},
pages = {298--304},
title = {{Efficacy of eBird data as an aid in conservation planning and monitoring}},
volume = {86},
year = {2015}
}
